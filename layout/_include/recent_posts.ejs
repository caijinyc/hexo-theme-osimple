<% if (page.posts.length > 0) { %>
  <div class="recent-posts">
    <% page.posts.sort('date', -1).limit(10).each(function(post) { %>
      <div class="recent-post-item">
        <div class="post-title">
          <a href="<%= config.root + post.path %>"><%= post.title %></a>
        </div>
        <% if (post.date) { %>
          <time datetime="<%= post.date.toJSON() %>">
              Posted by Orbem on <%= date(post.date) %>
          </time>
        <% } %>
        <div class="md-excerpt"><%- post.excerpt %></div>
        <% if (post.tags && post.tags.length){ %>
          <ul class="tag-list">
            <% post.tags.forEach((v) => { %>
              <li class="tag-list-item">
                <a href="<%= config.root + v.path %>"><%= v.name %></a>
              </li>
            <% }) %>
          </ul>
        <% } %>
      </div>
    <% }); %>
  </div>
<% } %>