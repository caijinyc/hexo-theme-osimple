<% if (page.posts.length > 0) { %>
  <div class="archive-posts">
    <% page.posts.sort('date', -1).each(function(post) { %>
      <div class="archive-post-item">
        <div class="post-title">
          <a href="<%= config.root + post.path %>">
            <%= post.title %>
            <% if (post.date) { %>
              <time datetime="<%= post.date.toJSON() %>">
                  <%= date(post.date) %>
              </time>
            <% } %>
          </a>
        </div>
      </div>
    <% }); %>
  </div>
<% } %>