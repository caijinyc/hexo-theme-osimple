<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title><%= config.title %></title>
  <%- css('css/osimple.css') %>
  <%- favicon_tag(theme.favicon) %> 
</head>
<body>
  <%- partial('_include/header.ejs', {}, { cache: true }) %>
  <main class="main-tags">
    <div class="all-tags">
      <h1 class="title">
        ALL TAGS
      </h1>
      <%- partial('_include/all_tags.ejs', {}, { cache: true }) %>
    </div>
    <div class="current-tag">
      <h1 class="title">
        CURRENT TAG
      </h1>
      <h1 class="tag-name">
          <%= page.tag %>
      </h1>
    </div>
    <div class="posts-list">
      <h1 class="title">
        CURRENT TAG'S POSTS
      </h1>
      <% include _include/tag_posts.ejs %>
    </div>
  </main>
  <%- partial('_include/footer.ejs', {}, { cache: true }) %>
</body>
</html>